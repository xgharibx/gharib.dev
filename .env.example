# Environment Variables for gharib.dev
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
# For local development with SQLite:
DATABASE_URL="file:./dev.db"

# For production with PostgreSQL (recommended):
# DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# ===========================================
# AUTHENTICATION (Future)
# ===========================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-secure-secret-with-openssl-rand-base64-32"

# ===========================================
# EMAIL SERVICE (EmailJS)
# ===========================================
# Sign up at https://emailjs.com and get your keys
NEXT_PUBLIC_EMAILJS_SERVICE_ID="your_service_id"
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID="your_template_id"
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY="your_public_key"

# ===========================================
# SITE CONFIGURATION
# ===========================================
NEXT_PUBLIC_SITE_URL="https://gharib.dev"
NEXT_PUBLIC_SITE_NAME="Amr Gharib - Problem Solver & Idea Creator"

# ===========================================
# ANALYTICS (Optional)
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=""

# Vercel Analytics (auto-enabled on Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=""

# ===========================================
# THIRD-PARTY INTEGRATIONS (Optional)
# ===========================================
# Stripe for course payments
STRIPE_SECRET_KEY=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Calendly for appointments
NEXT_PUBLIC_CALENDLY_URL=""

# Discord webhook for notifications
DISCORD_WEBHOOK_URL=""

# ===========================================
# DEPLOYMENT
# ===========================================
# Vercel
VERCEL_URL=""

# ===========================================
# DEVELOPMENT
# ===========================================
# Enable debug mode
DEBUG_MODE="false"
